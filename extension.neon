parameters:

	moodle:
		addAliasesForRenamedClasses: true

	scanDirectories: [ %moodle.rootDirectory% ]

	treatPhpDocTypesAsCertain: false

	bootstrapFiles:
		- bootstrap.php

services:
	moodleRootManager:
		class: MoodlePhpstan\MoodleRootManager
		arguments:
			moodleRoot: %moodle.rootDirectory%
			moodleVersion: %moodle.version%

parametersSchema:
	moodle: structure([
		rootDirectory: string(),
		version: string(),
		addAliasesForRenamedClasses: bool()
	])